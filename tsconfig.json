{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "module": "commonjs",
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@project/*": ["packages/*/src"],
      "@project/components/*": ["packages/components/src/*"]
    }
  },
  "include": ["packages/**/*", "examples/**/*"],
  "exclude": ["node_modules", "lib", "dist", "build"]
}
