{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react",
    "module": "ESNext",
    "baseUrl": ".",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@tushar1998/*": ["packages/*/src"],
    }
  },
  "include": ["packages/**/*", "examples/**/*"],
  "exclude": ["node_modules", "lib", "dist", "build"]
}
